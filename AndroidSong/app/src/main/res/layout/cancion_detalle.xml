<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cancion_detalle_secciones"
        android:name="ids.androidsong.ui.cancionMusicoListFragment"
        android:layout_width="304dp"
        android:layout_height="493dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="ids.androidsong.ui.cancionDetalle"
        tools:listitem="@layout/lista_secciones" />

    <ImageButton
        android:id="@+id/cancion_detalle_opciones"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/colorPrimary"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_action_collapse" />

    <ImageButton
        android:id="@+id/cancion_detalle_flat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="false"
        android:backgroundTint="@android:color/holo_purple"
        android:cropToPadding="false"
        android:onClick="modificarAcordesBemol"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/cancion_detalle_opciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_action_flat" />

    <ImageButton
        android:id="@+id/cancion_detalle_sharp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/holo_purple"
        android:cropToPadding="false"
        android:onClick="modificarAcordesSostenido"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/cancion_detalle_flat"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_action_sharp" />

    <ImageButton
        android:id="@+id/cancion_detalle_menor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/holo_purple"
        android:cropToPadding="false"
        android:onClick="tamanioLetraMenor"
        app:layout_constraintBottom_toTopOf="@+id/cancion_detalle_sharp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_action_expand" />

    <ImageButton
        android:id="@+id/cancion_detalle_mayor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/holo_purple"
        android:cropToPadding="false"
        android:onClick="tamanioLetraMayor"
        app:layout_constraintBottom_toTopOf="@+id/cancion_detalle_menor"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_action_collapse" />

</android.support.constraint.ConstraintLayout>